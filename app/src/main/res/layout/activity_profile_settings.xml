<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings_drawerlayout"
    android:clickable="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView20"
                android:background="@drawable/main_background" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:id="@+id/scrollView3" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:id="@+id/linearLayout">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/iv_settings_photo"
                            android:layout_width="102dp"
                            android:layout_height="102dp"
                            android:src="@drawable/hugo"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#FF000000"
                            android:layout_gravity="center"
                            android:clickable="true" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView15"
                                android:src="@drawable/user_logo"
                                android:padding="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/tv_settings_username"
                                android:hint="Username"
                                android:textSize="25sp"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:gravity="center_horizontal"
                                android:textAlignment="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:background="@drawable/rect_round_corner_notselected"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1" >

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView16"
                                android:src="@drawable/fullname_logo"
                                android:padding="5dp" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapSentences|textPersonName"
                                android:ems="10"
                                android:id="@+id/et_settings_name"
                                android:paddingTop="6dp"
                                android:hint="Name" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView11"
                                android:src="@drawable/mail_logo" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textEmailAddress"
                                android:ems="10"
                                android:id="@+id/et_settings_email"
                                android:hint="Email"
                                android:paddingTop="6dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView12"
                                android:src="@drawable/date_logo"
                                android:padding="5dp" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="date"
                                android:ems="10"
                                android:id="@+id/et_settings_birthdate"
                                android:layout_weight="1"
                                android:hint="Birth Date"
                                android:paddingTop="6dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView13"
                                android:padding="5dp"
                                android:src="@drawable/pass_logo" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:ems="10"
                                android:id="@+id/et_settings_password"
                                android:hint="Password"
                                android:paddingTop="6dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView17"
                                android:padding="5dp"
                                android:src="@drawable/pass_logo" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:ems="10"
                                android:id="@+id/et_settings_password2"
                                android:hint="Confirm Password"
                                android:paddingTop="6dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:padding="3dp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Update"
                            android:id="@+id/btn_settings_update"
                            android:padding="2dp"
                            android:background="@drawable/rect_round_corner_notselected"
                            android:layout_margin="2dp"
                            android:backgroundTint="#cfae78"
                            android:textSize="17sp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>


    </LinearLayout>

    <android.support.design.widget.NavigationView android:id="@+id/settings_nav_view"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:layout_gravity="start" android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header" app:menu="@menu/drawer_menu" />
</android.support.v4.widget.DrawerLayout>
