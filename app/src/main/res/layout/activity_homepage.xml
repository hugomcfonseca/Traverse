<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homepage_drawerlayout"
    android:clickable="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView29"
                android:background="@drawable/main_background" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView5"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.22"
                        android:background="@drawable/rect_round_corner_notselected"
                        android:layout_margin="3dp"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <feup.traverse.CustomTextRegularF
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Welcome,"
                                android:id="@+id/textView56"
                                android:textSize="30sp"
                                android:padding="5dp" />

                            <feup.traverse.CustomTextBoldF
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/tv_homepage_username"
                                android:textSize="30sp"
                                android:padding="5dp" />

                            <feup.traverse.CustomTextRegularF
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="!"
                                android:id="@+id/textView63"
                                android:textSize="30sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <feup.traverse.CustomTextRegularF
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="What do you want to start doing?"
                                android:id="@+id/textView61"
                                android:padding="5dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.26"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@drawable/rect_round_corner_notselected"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusableInTouchMode="true"
                            android:id="@+id/ll_homepage_chapters"
                            android:layout_margin="2dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageButton"
                                android:src="@drawable/book_chapters_logo" />

                            <feup.traverse.CustomTextRegularF
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Chapters"
                                android:id="@+id/textView15"
                                android:textColor="#000000"
                                android:padding="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@drawable/rect_round_corner_notselected"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusableInTouchMode="true"
                            android:id="@+id/ll_homepage_progress"
                            android:layout_margin="2dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView31"
                                android:src="@drawable/progress_logo" />

                            <feup.traverse.CustomTextRegularF
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Progress"
                                android:id="@+id/textView35"
                                android:textColor="#000000"
                                android:padding="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.26"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@drawable/rect_round_corner_notselected"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusableInTouchMode="true"
                            android:id="@+id/ll_homepage_social"
                            android:layout_margin="2dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView30"
                                android:src="@drawable/social_logo" />

                            <feup.traverse.CustomTextRegularF
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Social"
                                android:id="@+id/textView28"
                                android:textColor="#000000"
                                android:padding="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@drawable/rect_round_corner_notselected"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusableInTouchMode="true"
                            android:id="@+id/ll_homepage_profilesettings"
                            android:layout_margin="2dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView32"
                                android:src="@drawable/settings_logo" />

                            <feup.traverse.CustomTextRegularF
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Profile Settings"
                                android:id="@+id/textView42"
                                android:textColor="#000000"
                                android:padding="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.26"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/rect_round_corner_notselected"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusableInTouchMode="true"
                            android:id="@+id/ll_homepage_logout"
                            android:layout_margin="2dp"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imageView33"
                                android:src="@drawable/logout_logo" />

                            <feup.traverse.CustomTextRegularF
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Log Out"
                                android:id="@+id/textView49"
                                android:textColor="#000000"
                                android:padding="2dp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView android:id="@+id/homepage_nav_view"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:layout_gravity="start" android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header" app:menu="@menu/drawer_menu" />

</android.support.v4.widget.DrawerLayout>