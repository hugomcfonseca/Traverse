<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_profile_drawerlayout"
    android:clickable="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"
            />

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView19"
                android:background="@drawable/main_background"
                android:nestedScrollingEnabled="false" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:id="@+id/scrollView3" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:id="@+id/linearLayout">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#FF000000"
                            android:layout_gravity="center" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Hugo Fonseca"
                            android:id="@+id/tv_name"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:textSize="30sp"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:layout_gravity="center" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView15"
                                android:src="@drawable/user_logo"
                                android:padding="5dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/tv_username"
                                android:hint="Username"
                                android:textSize="25sp"
                                android:layout_gravity="center"
                                android:textColor="#000000"
                                android:gravity="center_horizontal"
                                android:textAlignment="center" />
                        </LinearLayout>

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1"
                        android:background="@drawable/rect_round_corner_notselected"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView14"
                                android:src="@drawable/persona_logo"
                                android:padding="5dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:id="@+id/tv_type_persona"
                                android:layout_marginLeft="3dp"
                                android:hint="Music Person"
                                android:paddingTop="6dp"
                                android:textColor="#000000"
                                android:gravity="center_horizontal"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView11"
                                android:src="@drawable/mail_logo" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:id="@+id/tv_email"
                                android:layout_marginLeft="3dp"
                                android:hint="your_email"
                                android:paddingTop="6dp"
                                android:textColor="#000000"
                                android:gravity="center_horizontal"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView12"
                                android:src="@drawable/date_logo"
                                android:padding="5dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAppearance="@android:style/TextAppearance.Medium"
                                android:id="@+id/tv_birthdate"
                                android:layout_marginLeft="3dp"
                                android:hint="your_birthday"
                                android:paddingTop="6dp"
                                android:textColor="#000000"
                                android:gravity="center_horizontal"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="38dp"
                                android:id="@+id/imageView13"
                                android:padding="5dp"
                                android:src="@drawable/progress_logo" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <ProgressBar
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/pb_game_progress"
                                    android:max="100"
                                    android:progress="50"
                                    android:indeterminate="false"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:layout_marginTop="15dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:id="@+id/tv_progress_value"
                                    android:paddingTop="6dp"
                                    android:textColor="#000000"
                                    android:paddingEnd="3dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="138dp"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/im_user_status"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                app:civ_border_width="0.1dp"
                                app:civ_border_color="#FF000000"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Online"
                                android:id="@+id/tv_user_status"
                                android:textSize="16sp"
                                android:paddingStart="5dp"
                                android:textColor="#000000" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:padding="3dp">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="See Progress"
                            android:id="@+id/btn_profile_progress"
                            android:layout_gravity="bottom|center"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:background="@drawable/rect_round_corner_notselected"
                            android:backgroundTint="#cfae78"
                            android:textSize="17sp" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Edit Profile"
                            android:id="@+id/btn_edit_profile"
                            android:layout_gravity="bottom|center"
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:background="@drawable/rect_round_corner_notselected"
                            android:backgroundTint="#cfae78"
                            android:textSize="17sp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>


    </LinearLayout>

    <android.support.design.widget.NavigationView android:id="@+id/view_profile_nav_view"
        android:layout_width="wrap_content" android:layout_height="match_parent"
        android:layout_gravity="start" android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header" app:menu="@menu/drawer_menu" />
</android.support.v4.widget.DrawerLayout>